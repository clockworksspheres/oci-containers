{
    "builders": [{
        "type": "docker",
        "image": "centos:7",
        "commit": "true"
    }],
    "provisioners": [
        {
        "environment_vars": [
                "PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin"
        ],
        "type": "shell",
        "inline": [
             "/bin/yum clean all && rm -rf /var/cache/yum && /bin/yum makecache && /bin/yum update -y && /bin/yum clean all",
             "/bin/yum install -y deltarpm && /bin/yum install -y epel-release && /bin/yum clean all",
             "/bin/yum makecache fast && /bin/yum groups mark convert && /bin/yum install -y which gettext python-gettext desktop-file-utils, xdg-utils && /bin/yum clean all"
        ]
        }
    ],
    "post-processors": [ [
        {
            "type": "docker-tag",
            "repository": "{{user `registry_host`}}:{{user `registry_port`}}/{{user `docker_registry_user`}}",
            "tag": "{{user `vm_name`}}"
        },
        "docker-push",
        {
            "type": "docker-save",
            "path": "{{user `vm_name`}}.tar"
        }
    ] ],
    "Variables": {
        "vm_name": "centos-base",
	"registry_host": "localhost",
	"registry_port": "5000",
	"docker_registry_user": "fredgears"
        }
}

