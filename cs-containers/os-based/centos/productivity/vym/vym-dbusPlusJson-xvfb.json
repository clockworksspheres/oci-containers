{
    "builders": [{
        "type": "docker",
        "image": "localhost:5000/fredgears:centos7-dbusPlusMesa-xvfb",
        "commit": "true",
        "changes": [
                "ENTRYPOINT [\"/usr/bin/vym\"]"
            ]
    }],
    "provisioners": [
        {
        "environment_vars": [
                "PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin"
        ],
        "type": "shell",
        "scripts": [
        "./scripts/install-vym.sh",
        "./scripts/waitForOsBufferFlush.sh",
        "./scripts/setEnvironment.sh",
        "./scripts/waitForOsBufferFlush.sh"
        ]
        }
    ],
    "post-processors": [ [
        {
            "type": "docker-tag",
            "repository": "localhost:5000/fredgears",
            "tag": "{{user `vm_name`}}"
        },
        "docker-push",
        {
            "type": "docker-save",
            "path": "{{user `vm_name`}}.tar"
        }
    ] ],
    "Variables": {
        "vm_name": "vym-xvfb"
        }
}

