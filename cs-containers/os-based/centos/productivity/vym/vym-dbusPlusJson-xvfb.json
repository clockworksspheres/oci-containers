{
    "builders": [{
        "type": "docker",
        "image": "localhost:5000/fredgears:centos7-dbusPlusMesa-xvfb",
        "commit": "true",
        "changes": [
                "ENTRYPOINT [\"/usr/bin/vym ;\"]"
            ]
    }],
    "provisioners": [
        {
        "environment_vars": [
                "PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin"
        ],
        "type": "shell",
        "inline": [
             "/bin/yum install -y vym"
        ]
        }
    ],
    "post-processors": [ [
        {
            "type": "docker-tag",
            "repository": "localhost:5000/fredgears",
            "tag": "vym-xvfb"
        },
        "docker-push",
        {
            "type": "docker-save",
            "path": "vym-xvfb.tar"
        }
    ] ],
    "Variables": {
        "vm_name": "vym-medium-native-xvfb"
        }
}

