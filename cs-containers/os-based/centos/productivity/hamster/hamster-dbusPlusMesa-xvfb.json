{
    "builders": [{
        "type": "docker",
        "image": "{{user `registry_host`}}:{{user `registry_port`}}/{{user `docker_registry_user`}}:centos7-dbusPlusMesa-xvfb",
        "commit": "true",
        "changes": [
                "ENTRYPOINT [\"/usr/bin/hamster-time-tracker\"]"
            ]
    }],
    "provisioners": [
        {
        "environment_vars": [
                "PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin"
        ],
        "type": "shell",
        "inline": [
             "/bin/yum install -y intltool gettext hamster-time-tracker"
        ]
        }
    ],
    "post-processors": [ [
        {
            "type": "docker-tag",
            "repository": "{{user `registry_host`}}:{{user `registry_port`}}/{{user `docker_registry_user`}}",
            "tag": "{{user `vm_name`}}"
        },
        "docker-push",
        {
            "type": "docker-save",
            "path": "{{user `vm_name`}}.tar"
        }
    ] ],
    "Variables": {
        "vm_name": "hamster-time-tracker-xvfb"
	"registry_host": "localhost",
	"registry_port": "5000",
	"docker_registry_user": "fredgears"
        }
}

