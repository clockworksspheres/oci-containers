{
    "builders": [{
        "type": "docker",
        "image": "localhost:5000/fredgears:centos7-dbusPlusMesa-xvfb",
        "commit": "true"
    }],
    "provisioners": [
        {
        "environment_vars": [
                "PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin"
        ],
        "type": "shell",
        "inline": [
             "/bin/yum install -y hamster-time-tracker"
        ]
        }
    ],
    "post-processors": [ [
        {
            "type": "docker-tag",
            "repository": "localhost:5000/fredgears",
            "tag": "hamster-time-tracker-xvfb"
        },
        "docker-push",
        {
            "type": "docker-save",
            "path": "hamster-time-tracker-xvfb.tar"
        }
    ] ],
    "Variables": {
        "vm_name": "hamster-time-tracker-medium-native-xvfb"
        }
}

