{
    "builders": [{
        "type": "docker",
        "image": "{{user `registry_host`}}:{{user `registry_port`}}/{{user `docker_registry_user`}}:centos-xfce",
        "commit": "true"
    }],
    "provisioners": [
        {
        "environment_vars": [
                "PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin:/usr/local/sbin"
        ],
        "type": "shell",
        "inline": [
             "/bin/yum install -y mesa-dri-drivers mesa-libGL mesa-libGLES mesa-libGLU mesa-libGLw mesa-libgbm mesa-vdpau-drivers mesa-filesystem mesa-libEGL mesa-libOSMesa mesa-libglapi mesa-libxatracker mesa-private-llvm egl-utils glx-utils gtkglarea2"
        ]
        }
    ],
    "post-processors": [ [
        {
            "type": "docker-tag",
            "repository": "{{user `registry_host`}}:{{user `registry_port`}}/{{user `docker_registry_user`}}",
            "tag": "{{user `vm_name`}}"
        },
        "docker-push",
        {
            "type": "docker-save",
            "path": "{{user `vm_name`}}.tar"
        }
    ] ],
    "Variables": {
        "vm_name": "centos-mesa-xfce",
	"registry_host": "localhost",
	"registry_port": "5000",
	"docker_registry_user": "fredgears"
        }
}

